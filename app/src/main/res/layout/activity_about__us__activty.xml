<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ebony"
    tools:context=".AboutUsActivity"
    android:layoutDirection="ltr">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ebony"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="درباره ما"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:shadowRadius="2"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:fontFamily="@font/bdaznnbd"
            app:layout_constraintRight_toLeftOf="@id/back_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_ebony"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="35dp"
        android:layout_marginBottom="100dp"
        app:cardBackgroundColor="@color/light_ebony"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:shadowColor="#FF8A65"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="تـوسـعه دهـنده :"
                android:textColor="@color/text_color"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="علی اسمعیل فرد"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/about_us_card"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/ic_outline_email_24" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@color/ebony" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="ارتباط با ما"
                    android:textColor="@color/ebony"
                    android:textSize="27sp" />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>